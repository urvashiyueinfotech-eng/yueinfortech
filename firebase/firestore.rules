rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Categories and nested FAQs
    match /categories/{categoryId} {
      // Categories are public to read (used on site)
      allow read: if true;
      allow write, update, delete: if isAdmin();

      match /faqs/{faqId} {
        // Public read only if published; admins can read all.
        allow read: if (resource.data.published == true) || isAdmin();
        allow write, update, delete: if isAdmin();
      }
    }

    // Fallback for other collections: public read, admin-only write.
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
